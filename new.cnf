[mysqld]
# Remove user = root - let container handle this
port = 3306
datadir = /var/lib/mysql
socket = /tmp/mysqld.sock
log-bin = mysql-bin  # Use relative path, will go to datadir

# Remove deprecated options - they're default in MariaDB 10.3+
# innodb-file-format=barracuda  # REMOVED - deprecated
# innodb-large-prefix=1         # REMOVED - deprecated
innodb-file-per-table=1

character-set-client-handshake = FALSE
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[mysql]
default-character-set = utf8mb4
